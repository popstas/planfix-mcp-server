{
  "name": "@popstas/planfix-mcp-server",
  "version": "1.0.9",
  "description": "MCP server for Planfix API integration",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "build": "tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "npm run typecheck && npm run build && npm run test && npm run lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "mcp-cli": "mcp-inspector --cli npm run dev",
    "planfix": "tsx src/scripts/planfix-cli.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "execa": "^9.5.2",
    "js-yaml": "^4.1.0",
    "mqtt": "^5.13.0",
    "node-fetch": "^3.3.2",
    "tsx": "^4.19.4",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@modelcontextprotocol/inspector": "^0.11.0",
    "@types/node": "^20.17.30",
    "eslint": "^8.57.1",
    "globals": "^16.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.2"
  }
}
